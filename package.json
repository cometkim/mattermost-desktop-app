{
  "name": "mattermost-desktop-app",
  "version": "0.0.0",
  "description": "Mattermost native desktop client built on top of Revery-UI",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build -p App",
    "buildsInSource": "_build",
    "install": [
      "esy-installer App.install"
    ]
  },
  "revery-packager": {
    "bundleName": "ExampleApp",
    "bundleId": "com.example.app",
    "displayName": "Revery Example App",
    "mainExecutable": "App",
    "windows": {
      "packages": ["zip"],
      "iconFile": "assets/icon.ico"
    },
    "darwin": {
      "packages": ["tar", "dmg"],
      "iconFile": "assets/icon.icns"
    },
    "linux": {
      "packages": ["tar", "appimage"]
    }
  },
  "dependencies": {
    "ocaml": "~4.7.0",
    "revery": "0.29.0"
  },
  "resolutions": {
    "@opam/cmdliner": "1.0.2",
    "pesy": "0.4.1",
    "rebez": "github:jchavarri/rebez#46cbc183",
    "@opam/merlin-extend": "0.4"
  },
  "scripts": {
   "format": "bash -c \"refmt --in-place *.re\"",
   "run": "esy x App"
  },
  "devDependencies": {
    "ocaml": "~4.7.0",
    "@opam/dune": "*",
    "@opam/merlin": "*",
    "esy-macdylibbundler": "*"
  }
}
